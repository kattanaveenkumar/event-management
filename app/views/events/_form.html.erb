
<%= form_for @event, html: {class: "form-horizontal"} do |f| %>
	<% if @event.errors.any? %>
		<div class="alert alert-danger">
			<h3>These errors prohibited the form from being created:</h3>
			<ul>
				<% @event.errors.full_messages.each do |msg| %>
				<li><%= msg%></li>
				<% end %>
			</ul>			
		</div>	
	<% end %>
	
	<div class="form-group">
			<%= f.label :name %>*
	<%= f.text_field :name, class: "form-control" %>		
	</div>

	
	<div class="form-group">
			<%= f.label :image %>*
	<%= f.file_field :image, class: "form-control" %>
	</div>

	<div class="form-group">
		<%= f.label :description %>
	<%= f.text_area :description, class: "form-control" %> 		
	</div>

	<div class="form-group">
		<%= f.label :address %>*
	<%= f.text_area :address, class: "form-control" %> 		
	</div>

	<div class="form-group">
		<%= f.label "Starting at" %>*
	<%= f.text_field :start_datetime, id: "startDatetime", class: "form-control" %> 
	</div>

	<div class="form-group">
		<%= f.label "Ending at" %>*
	<%= f.text_field :end_datetime, id: "endDatetime", class: "form-control" %> 
	</div>
	

	<div class="form-group">
		<%= f.label :entry_fee %>
	<%= f.number_field :entry_fee, class: "form-control" %> 
	</div>

	<div class="form-group">
		<%= f.label :status %>
	<%= f.select :status, ["New", "On-going", "Over"], {}, class: "form-control" %> 	
	</div>

	<%= f.submit "Submit", class: "btn btn-success"%>
</div>
<% end %>
