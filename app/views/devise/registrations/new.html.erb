<div class="col col-sm-6 col-md-6 col-lg-4 col-xl-3">
<h2 class="text-center">Sign up</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-group">
    <%= f.label :email %><br />
    <%= f.email_field :email, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
  </div>
  <div class="form-group">
    <%= f.label :name %><br />
    <%= f.email_field :name, autofocus: true, autocomplete: "name", class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password %>
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "new-password", class: "form-control form-control-lg" %>
  </div>

  <div class="form-group">
    <%= f.label :password_confirmation %><br />
    <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control form-control-lg" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up", class: "btn btn-info btn-lg btn-block" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
</div>